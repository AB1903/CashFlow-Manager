# ========================================
# ENVIRONMENT VARIABLES TEMPLATE
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# ========================================
# ENVIRONMENT
# ========================================
ENVIRONMENT=development  # development or production

# ========================================
# SUPABASE CONFIGURATION
# ========================================
# Get these from your Supabase project settings:
# https://app.supabase.com/project/YOUR_PROJECT/settings/api

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# Database URL format:
# postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres
# NOTE: URL-encode special characters in password (e.g., @ becomes %40, ! becomes %21)
SUPABASE_DB_URL=postgresql://postgres.xxxxx:your-password@aws-0-region.pooler.supabase.com:6543/postgres

# ========================================
# SECURITY
# ========================================
# Generate a strong secret key (minimum 32 characters)
# You can use: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-in-production

# ========================================
# JWT CONFIGURATION
# ========================================
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ========================================
# CORS & HOSTS
# ========================================
# For development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# For production, add your Vercel domain:
# ALLOWED_ORIGINS=https://your-app.vercel.app,http://localhost:3000

# Trusted hosts (prevent host header injection)
TRUSTED_HOSTS=localhost,127.0.0.1

# For production on Render:
# TRUSTED_HOSTS=your-app.onrender.com,your-app.vercel.app
